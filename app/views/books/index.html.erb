<body>
  <%= flash[:notice] %>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <%= link_to "Show", "books/#{book.id}" %>
          </td>
          <td>
            <%= link_to "Edit", "books/#{book.id}/edit" %>
          </td>
          <td>
            <%= link_to "Destroy", "books/#{book.id}/destroy", method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
    <%= form_with model: @book,url: '/books', method: :post do|f| %>
  <h2>New books</h2>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>
</body>